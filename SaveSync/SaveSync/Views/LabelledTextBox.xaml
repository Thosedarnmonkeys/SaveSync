<UserControl x:Class="SaveSync.Views.LabelledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveSync.Views"
             >
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Label Content="{Binding Label, RelativeSource={RelativeSource AncestorType=local:LabelledTextBox}}"/>
    <TextBox Grid.Column="1" Text="{Binding Text, RelativeSource={RelativeSource AncestorType=local:LabelledTextBox}}"/>
  </Grid>
</UserControl>
